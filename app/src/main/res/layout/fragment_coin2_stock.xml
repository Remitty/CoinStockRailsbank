<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".stock.Coin2StockFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_white_rectangle"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/coin_icon"
                            android:src="@drawable/ic_round_usdc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:src="@drawable/arrowdown"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/coin_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/colorPurple"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/coin_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="($ 0.0)"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        android:textSize="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/coin_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDC"
                            android:textColor="@color/colorBlack"
                            android:textSize="13dp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/send"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_white_rectangle"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/stock_money_icon"
                        android:src="@drawable/ic_round_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/stock_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="$ 0.0"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:textSize="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Stock Balance"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter deposit amount"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corner_white_rectangle"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_transfer_amount"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlue"
                        android:hint="0.00"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDC"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/chk_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Select if you want a margin account"
                android:textColor="@color/colorBlack"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_transfer_funds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                android:paddingHorizontal="40dp"
                android:textSize="15dp"
                android:text="transfer now"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:text="Amount"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:text="Received"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:text="Status"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:text="Date"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/darkBlue"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_transfer_view"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>