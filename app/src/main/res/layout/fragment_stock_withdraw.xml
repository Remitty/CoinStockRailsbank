<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stock.stockwithdraw.StockWithdrawFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Balance"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/stock_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.0"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/stock_usdc_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0.0 USDC)"
                android:textColor="@color/colorRedCrayon"
                android:visibility="visible"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_marginHorizontal="20dp">
            <RadioGroup
                android:id="@+id/rdg_withdraw_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="USDC"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="DAI"/>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_withdraw_wallet_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:visibility="gone"
            android:inputType="text"
            android:hint="USDC Wallet Address"
            android:background="@drawable/solid_edittext"/>
        <EditText
            android:id="@+id/edit_coin_withdraw_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:hint="Enter withdraw amount (USDC)"
            android:background="@drawable/solid_edittext"/>

        <Button
            android:id="@+id/btn_coin_withdraw"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="Withdraw"/>
    </LinearLayout>

</FrameLayout>